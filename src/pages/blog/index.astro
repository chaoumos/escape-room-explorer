---
import Layout from '../../layouts/Layout.astro';

const siteTitle = "Blog - Escape Room Explorer";
const siteDescription = "Read about the latest escape room trends, reviews, and tips.";

const posts = await Astro.glob('../../content/blog/*.md');

---

<Layout title={siteTitle} description={siteDescription}>
	<section class="py-8">
		<div class="container mx-auto">
			<h1 class="text-4xl font-bold mb-6">Blog</h1>
			<ul>
				{posts.map((post) => (
					<li class="mb-4">
						<a href={post.url} class="text-2xl font-semibold hover:text-primary">{post.frontmatter.title}</a>
						<p class="text-gray-600">{new Date(post.frontmatter.pubDate).toLocaleDateString()}</p>
						<p class="text-gray-700">{post.frontmatter.description}</p>
					</li>
				))}
			</ul>
		</div>
	</section>
</Layout>